<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DrinkDetailActivity">

    <ImageView
        android:id="@+id/imgsubdrink"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ly_tra_chanh"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/botron_layout">

        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="115dp"
            android:text="Trà chanh"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvdes"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tvname"
            android:layout_marginEnd="35dp"
            android:layout_centerHorizontal="true"
            android:text="descreption ddddddd
            dddddddddddddddddddddddddddđ
            ddddddddddddddđ"
            android:textSize="16sp"/>


        <LinearLayout
            android:id="@+id/llayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvdes">

            <TextView
                android:id="@+id/btnminus"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="-"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/botron"/>

            <TextView
                android:id="@+id/tvquantity"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/btnplus"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="+"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/botron"/>

            <TextView
                android:id="@+id/tvprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="100000"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tvtypeprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="VND"
                android:textSize="23sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnadd"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="20dp"
            android:background= "@drawable/button_bg"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/llayout"
            android:text="Add drinks"
            android:textSize="20sp"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgback"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/backimg"/>

    <ImageView
        android:id="@+id/imgcart"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/baseline_shopping_cart_24"/>

    <ImageView
        android:id="@+id/imgdrink"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/ca_phe_den_da_transparent" />
</RelativeLayout>
